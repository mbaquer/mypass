<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.mypass.controllers.LoginController" styleClass="vbox">
    <TextField fx:id="txtEmail" promptText="Email" styleClass="text-field"/>
    <PasswordField fx:id="txtPassword" promptText="Master Password" styleClass="password-field"/>
    <Button text="Login" onAction="#handleLogin" styleClass="button"/>
    <Button text="Register" onAction="#handleRegister" styleClass="button"/>
</VBox>