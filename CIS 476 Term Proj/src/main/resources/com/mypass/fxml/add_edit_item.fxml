<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.mypass.controllers.AddEditItemController">
    <ComboBox fx:id="comboType" promptText="Select Type"/>
    <TextField fx:id="txtEmail" promptText="Email" visible="false"/>
    <TextField fx:id="txtUsername" promptText="Username" visible="false"/>
    <PasswordField fx:id="txtPassword" promptText="Password" visible="false"/>
    <TextField fx:id="txtCardNumber" promptText="Card Number" visible="false"/>
    <TextField fx:id="txtCardExpiration" promptText="Expiration Date (MM/YY)" visible="false"/>
    <TextField fx:id="txtCVV" promptText="CVV" visible="false"/>
    <HBox spacing="10.0">
        <Button text="Save" onAction="#handleSave" />
        <Button text="Cancel" onAction="#handleCancel" />
    </HBox>
</VBox>